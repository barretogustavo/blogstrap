<article class="blog-post">
  <h2 class="blog-post-title"><%= @article.title%></h2>

  <p class="blog-post-meta">
    <%= render 'article_detail', article: @article %>
  </p>

  <p style="white-space: pre-line;">
    <%= @article.body %>
  </p>

  <%= link_to 'Edit', 
    edit_article_path(@article), 
    class: 'btn btn-primary btn-sm' if policy(@article).update?
  %>

  <%= link_to 'Back', 
      articles_path, 
      class: 'btn btn-secondary btn-sm' 
  %>

  <%= link_to 'Delete', 
    article_path(@article),
    data: { 
      turbo_method: :delete,
      turbo_confirm: 'Are you sure you want to delete this article?' 
    },
    class: 'btn btn-danger btn-sm' if policy(@article).destroy?
  %>

  <h2 class="mt-3">Comments</h2>
  <% if @article.comments.present? %>
    <%= render @article.comments %>
  <% else %>
    <p>No comments yet.</p>
  <% end %>

  <h2>Add a comment:</h2>
  <% if policy(:comment).create? %>
    <%= render 'comments/form' %>
  <% else %>
    Please, 
    <%= link_to 'login', user_session_path %> or 
    <%= link_to 'sign-up', new_user_registration_path%>
    to create a comment.
  <% end%>

</article>
