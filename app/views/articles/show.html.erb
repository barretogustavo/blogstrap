<article class="blog-post">
  <h2 class="blog-post-title"><%= @article.title%></h2>

  <p class="blog-post-meta">
    <%= date_formatter(@article.created_at) %> by 
    <%= @article.user.email %>
  </p>

  <p style="white-space: pre-line;">
    <%= @article.body %>
  </p>

  <%= link_to 'Edit', 
    edit_article_path(@article), 
    class: 'btn btn-secondary btn-sm' if policy(@article).update?
  %>

  <%= link_to 'Back', 
      articles_path, 
      class: 'btn btn-secondary btn-sm' 
  %>

  <%= link_to 'Delete', 
    article_path(@article),
    data: { 
      turbo_method: :delete,
      turbo_confirm: 'Are you sure you want to delete this article?' 
    },
    class: 'btn btn-danger btn-sm' if policy(@article).destroy?
  %>
</article>
